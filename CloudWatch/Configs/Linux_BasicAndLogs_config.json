{
	"agent": {
		"metrics_collection_interval": 60,
		"run_as_user": "root"
	},
	"logs": {
		"logs_collected": {
			"files": {
				"collect_list": [
					{
			                        "file_path": "/var/log/<LOG_DIR>/<LOG_FILE>",
						"log_group_name": "<CF_LOG_GROUP_NAME>",
						"log_stream_name": "<CF_LOG_STREAM_NAME>",
						"retention_in_days": 30
					},
					{
			                        "file_path": "/var/log/<LOG_DIR>/<LOG_FILE>",
						"log_group_name": "<CF_LOG_GROUP_NAME>",
						"log_stream_name": "<CF_LOG_STREAM_NAME>",
						"retention_in_days": 30
					}
				]
			}
		}
	},
	"metrics": {
        "namespace": "CustomEC2 - <ENV> - <INSTANCENAME>",
		"append_dimensions": {
			"AutoScalingGroupName": "${aws:AutoScalingGroupName}",
			"ImageId": "${aws:ImageId}",
			"InstanceId": "${aws:InstanceId}"
		},
		"metrics_collected": {
			"cpu": {
				"measurement": [
					"cpu_usage_idle"
				],
				"metrics_collection_interval": 60,
				"totalcpu": true
			},
			"disk": {
				"measurement": [
					"used_percent"
				],
				"metrics_collection_interval": 60,
				"resources": [
					"*"
				]
			},
			"mem": {
				"measurement": [
					"mem_used_percent"
				],
				"metrics_collection_interval": 60
			},
			"net": {
				"measurement": [
					"bytes_sent",
					"bytes_recv",
					"packets_sent",
					"packets_recv"
				],
				"metrics_collection_interval": 60,
				"resources": [
					"*"
				]
			}
		}
	}
}
