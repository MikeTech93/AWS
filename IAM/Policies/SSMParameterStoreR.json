{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "ssm:DescribeParameters",
                "ssm:GetParameters",
                "ssm:GetParameter",
                "ssm:GetParametersByPath"
            ],
            "Resource": [
                "arn:aws:ssm:<REGION>:<AWS_ACCOUNT_ID>:parameter/dev",
                "arn:aws:ssm:<REGION>:<AWS_ACCOUNT_ID>:parameter/dev/*",
                "arn:aws:ssm:<REGION>:<AWS_ACCOUNT_ID>:parameter/staging",
                "arn:aws:ssm:<REGION>:<AWS_ACCOUNT_ID>:parameter/staging/*",
                "arn:aws:ssm:<REGION>:<AWS_ACCOUNT_ID>:parameter/production",
                "arn:aws:ssm:<REGION>:<AWS_ACCOUNT_ID>:parameter/production/*"
            ]
        }
    ]
}
